---
import { Icon } from "astro-icon/components"
import Layout from "@layouts/main.astro"
---
<Layout>
	<div class="text-center w-5/6 max-w-5xl main">
        <span class="inline-block"><Icon name="iconoir:question-mark-circle" /></span>
        <h1 class="text-4xl my-3 bg-clip-text text-transparent
                    bg-gradient-to-br from-cyan-400 to-violet-700">404 Not found
        </h1>
        <h3 class="text-2xl"><a href="/">Click to return <Icon name="iconoir:arrow-right-circle-solid" /></a></h3>
	</div>
</Layout>

<style lang="scss">
	div.main {
        span [data-icon] {
            @apply w-20 h-20 text-cyan-200;
        }
        h3 [data-icon] {
            @apply inline-block w-8 h-8 align-[-0.5rem];
        }
    }
</style>
